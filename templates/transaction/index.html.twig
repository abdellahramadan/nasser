{% extends 'base.html.twig' %}

{% block title %}{{ user.profile.fullname }} - Internation Basis Bank{% endblock %}

{% block body %}

<!-- content @s -->
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="content-page wide-md m-auto">
                    <div class="nk-block-head nk-block-head-lg wide-xs mx-auto">
                        <div class="nk-block-head-content text-center">
                            <h2 class="nk-block-title fw-normal">{{ user.profile.fullname }}</h2>
                            <div class="nk-block-des">
                                <p class="lead">You have an ongoing transaction</p>
                            </div>
                        </div>
                    </div>
                    <!-- .nk-block-head -->
                    <div class="nk-block">
                        <div class="card card-bordered">
                            <div class="card-inner card-inner-xl">
                                
                            </div>
                        </div>
                    </div><!-- .nk-block -->

                    <div class="nk-block">
                      <div class="card card-bordered">
                        <div class="card-inner card-inner-xl">
                          <div class="nk-block-head-content text-center mb-5">
                            <h4 class="nk-block-title fw-normal">Information Expéditeur</h4>
                          </div>
                          <table class="table table-hover">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Valeur</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <th scope="row">1</th>
                                <td>Nom Expéditeur</td>
                                <td>{{ user.transactions[0].sender }}</td>
                                
                              </tr>
                              <tr>
                                <th scope="row">2</th>
                                <td>Pays Expéditeur</td>
                                <td>{{ user.transactions[0].senderCountry }}</td>
                                
                              </tr>
                              {% if user.transactions[0].senderBank  is not empty %}
                                <tr>
                                  <th scope="row">3</th>
                                  <td>Banque Expéditeur</td>
                                  <td>{{ user.transactions[0].senderBank }}</td>
                                  
                                </tr>
                              {% endif %}
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>

                    <div class="nk-block">
                      <div class="card card-bordered">
                        <div class="card-inner card-inner-xl">
                          <div class="nk-block-head-content text-center mb-5">
                            <h4 class="nk-block-title fw-normal">Information  Destinataire</h4>
                          </div>
                          <table class="table table-hover">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Valeur</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <th scope="row">1</th>
                                <td>Nom Destinataire</td>
                                <td>{{ user.profile.fullname }}</td>
                                
                              </tr>
                              <tr>
                                <th scope="row">2</th>
                                <td>Amount</td>
                                <td>{{ user.profile.currency }} {{ user.profile.balance }}</td>
                                
                              </tr>
                              
                              <tr>
                                <th scope="row">3</th>
                                <td>Swift</td>
                                <td>{{ user.profile.swift }}</td>
                                
                              </tr>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>

                    <!-- .nk-block-head -->
                    <div class="nk-block">
                        <div class="card card-bordered">
                            <div class="card-inner card-inner-xl">
                                <div class="nk-block-head-content text-center">
                                  <div class="nk-block-head-content text-center mb-5">
                                    <h4 class="nk-block-title fw-normal">Reason</h4>
                                  </div>

                                  <div class="text-center">
                                    <p>{{ user.profile.motif|raw }}</p>
                                  </div>
                              </div>
                            </div>
                        </div>
                    </div>
                    <!-- .nk-block -->

                </div><!-- .content-page -->
            </div>
        </div>
    </div>
</div>
<!-- content @e -->

{% endblock %}
